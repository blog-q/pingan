            </property>
        </bean>
        <!-- ******* 立其  接口同步  end ******* -->
        
         <!-- 360新媒体 接口同步  start -->
        <bean id="newMediaJob" class="com.zzcm.fourgad.job.NewMediaJob"></bean>
